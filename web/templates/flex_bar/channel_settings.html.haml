.content
  .list-view.channel-settings
    .title
      %h2 Room Info
    %form
      %ul.list.clearfix
        %li.text
          %label Name
          .setting-block
            %span.current-setting(data-edit="false") Channel Name
        %li.markdown
          %label Topic
          .setting-block
            %span.current-setting(data-edit="false")
        %li.text
          %label Description
          .setting-block
            %span.current-setting(data-edit="false")
        %li.boolean
           %label Private
          .setting-block
            .input.checkbox.toggle
              %input#t(type="checkbox" name="t" disabled="true")
              %label(for="t")
        %li.boolean
          %label Read Only
          .setting-block
            .input.checkbox.toggle
              %input#to(type="checkbox" name="to" disabled="true")
              %label(for="to")
        %li.boolean
          %label Archived
          .setting-block
            .input.checkbox.toggle
              %input#archived(type="checkbox" name="archived" disabled="true")
              %label(for="archived")
