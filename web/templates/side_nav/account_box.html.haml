.account-box(aria="Account" role="region")
  %div(class="info #{get_user_status(@user)} primary-background-color")
    - if @user.username do
      .thumb(data-status="#{get_visual_status(@user)}")
        .avatar
          = get_user_avatar(@user)
      .data
        %h4= get_user_name(@user)
  .options.primary-background-color.animated-hidden
    .wrapper
      %button.status.online(data-status="online")
        %span Online
      %button.status.away(data-status="away")
        %span Away
      %button.status.busy(data-status="busy")
        %span Busy
      %button.status.offline(data-status="offline")
        %span Offline
      %button#account.account-link
        %i.icon-sliders
        %span My Account
      - for menu <- get_registered_menus(@user) do
        %button.account-box-item
          %i(class="#{menu[:icon]}")
          %span= menu[:name]
      - if show_admin_option(@user) do
        %button#admin.account-link
        %i.icon-wrench
        %span Administration
      %button#logout
        %i.icon-logout
        %span Logout
