#user-card-popover
#ucx-chat.menu-nav
  .connection-status.status-online
    = # connection status
  .main-content.content-background-color(style="transform: translateX(0px);")
    = #{{#if modal}}main-modal{{/if}}">
    .room-container
      = render "room.html", chatd: @chatd, conn: @conn
  = render UcxChat.SideNavView, "show.html", conn: @conn, chatd: @chatd

:javascript
  window.ucxchat = {room: '<%= @chatd.channel.name %>', channel_id: <%= @chatd.channel.id %>,
    nickname: '<%= @chatd.client.nickname %>',client_id: <%= @chatd.client.id %>, display_name: '<%= @chatd.active_room[:display_name] %>'};
  let myPanel = $('.messages-box .wrapper')
  myPanel.scrollTop(myPanel[0].scrollHeight - myPanel.height());
